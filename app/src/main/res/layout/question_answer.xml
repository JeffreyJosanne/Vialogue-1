<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:hint="@string/question"
        android:maxLines="2"
        android:minLines="2"
        android:padding="@dimen/fab_margin"
        android:textColor="@android:color/white"
        android:textColorHint="@color/whitish_grey"
        android:textSize="@dimen/question_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/linear_layout_padding"
        android:paddingRight="@dimen/linear_layout_padding"
        android:paddingTop="@dimen/linear_layout_padding">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/answer_option_view_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/delete_button_0"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:padding="@dimen/delete_button_padding"
                    android:text="@string/delete_button"
                    android:textColor="@color/colorAccentLight"
                    android:visibility="invisible" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/is_answer_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/delete_button_0"
                    android:layout_alignBottom="@+id/delete_button_0"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    app:buttonTint="@color/colorPrimary"/>

                <EditText
                    android:id="@+id/answer_option_0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/is_answer_0"
                    android:layout_toLeftOf="@id/delete_button_0"
                    android:layout_toRightOf="@+id/is_answer_0"
                    android:layout_toStartOf="@id/delete_button_0"
                    android:background="@android:color/transparent"
                    android:hint="@string/answer_option"
                    android:paddingBottom="@dimen/answer_option_padding"
                    android:paddingTop="@dimen/answer_option_padding" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/answer_option_view_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/delete_button_1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:padding="@dimen/delete_button_padding"
                    android:text="@string/delete_button"
                    android:textColor="@color/colorAccentLight"
                    android:visibility="invisible" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/is_answer_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/delete_button_1"
                    android:layout_alignBottom="@+id/delete_button_1"
                    android:layout_alignParentLeft="true"
                    app:buttonTint="@color/colorPrimary" />

                <EditText
                    android:id="@+id/answer_option_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/is_answer_1"
                    android:layout_toLeftOf="@id/delete_button_1"
                    android:layout_toRightOf="@+id/is_answer_1"
                    android:layout_toStartOf="@id/delete_button_1"
                    android:background="@android:color/transparent"
                    android:hint="@string/answer_option"
                    android:paddingBottom="@dimen/answer_option_padding"
                    android:paddingTop="@dimen/answer_option_padding" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/answer_option_view_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <Button
                    android:id="@+id/delete_button_2"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:padding="@dimen/delete_button_padding"
                    android:text="@string/delete_button" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/is_answer_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/delete_button_2"
                    android:layout_alignBottom="@+id/delete_button_2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    app:buttonTint="@color/colorPrimary" />

                <EditText
                    android:id="@+id/answer_option_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/is_answer_2"
                    android:layout_toLeftOf="@id/delete_button_2"
                    android:layout_toRightOf="@+id/is_answer_2"
                    android:layout_toStartOf="@id/delete_button_2"
                    android:background="@android:color/transparent"
                    android:hint="@string/answer_option"
                    android:paddingBottom="@dimen/answer_option_padding"
                    android:paddingTop="@dimen/answer_option_padding" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/answer_option_view_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <Button
                    android:id="@+id/delete_button_3"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:padding="@dimen/delete_button_padding"
                    android:text="@string/delete_button" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/is_answer_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/delete_button_3"
                    android:layout_alignBottom="@+id/delete_button_3"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    app:buttonTint="@color/colorPrimary" />

                <EditText
                    android:id="@+id/answer_option_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/is_answer_3"
                    android:layout_toLeftOf="@id/delete_button_3"
                    android:layout_toRightOf="@+id/is_answer_3"
                    android:layout_toStartOf="@id/delete_button_3"
                    android:background="@android:color/transparent"
                    android:hint="@string/answer_option"
                    android:paddingBottom="@dimen/answer_option_padding"
                    android:paddingTop="@dimen/answer_option_padding" />
            </RelativeLayout>
        </RadioGroup>

        <ImageButton
            android:id="@+id/add_option"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:src="@drawable/plus"
            android:textColor="@color/colorAccentLight"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/done_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="@string/done"
            android:textSize="20sp"
            android:enabled="false"/>
    </LinearLayout>
</LinearLayout>