    },

    "category": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/id"
        },
        "name": {"type": "string"}
      }
    },

    "language": {
      "type": "object",
      "properties": {
        "id": {
          "$ref": "#/definitions/id"
        },
        "name": {"type": "string"}
      }
    },

    "name": {
      "type": "string"
    },

    "description": {
      "type": "string"
    },

    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },

    "resolution": {
      "type": "array",
      "items": [
        {"type": "integer"},
        {"type": "integer"}
      ],
      "additionalItems": false
    },

    "slide_ordering_sequence": {
      "type": "array",
      "items": {"type": "integer"}
    },

    "slides": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/slide"
      }
    },

    "is_edited": {
      "type": "boolean"
    },

    "slide": {
      "type": "object",
      "properties": {
        "id": {"$ref": "#/definitions/id"},
        "project_slide_id": {"$ref": "#/definitions/project_slide_id"},
